# Push docs/ to GitHub
run = lambda cmd: __import__('subprocess').run(
    cmd, shell=True, cwd="/content/glassbox_pkg", capture_output=True, text=True)

run("git add docs/")
r = run("git diff --cached --quiet")
if r.returncode != 0:
    run('git commit -m "docs: add GitHub Pages landing page"')
    run("git push origin main")
    print("Landing page pushed.")
